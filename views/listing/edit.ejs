<style>
    .original_image:hover{
        box-shadow:  5px 5px 10px rgba(0, 0, 0, 0.5),  /* First shadow */
    -5px -5px 10px #FE424D,  /* Second shadow */
    10px 10px 15px #0D6EFD; /* Third shadow */
    transition: box-shadow 0.4s ease-out;   
    }


    .original_image:not(:hover){
    box-shadow:  0px 0px 0px rgba(0, 0, 0, 0.5),  /* First shadow */
     0px  0px  0px #FE424D,  /* Second shadow */
     0px  0px  0px #0D6EFD; /* Third shadow */
    transition: box-shadow 0.35s ease-out;
}

.original_image{
    border-radius: 8px;
}


</style>

<%= layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-sm-12 col-lg-8 col-md-10 offset-lg-2 offset-md-1 offset-sm-0">
                <h1>Edit your Listing</h1>
                <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

                    <div class="mb-3">
                        <label for="titleedit" class="form-label mb-0">Title</label>
                        <input name="listing[title]" type="text" id="titleedit" value="<%= listing.title %>"
                            class="form-control" required >
                            <div class="invalid-feedback">Enter a valid title</div>
                            <div class="valid-feedback">Valid</div>                
                    </div>


                    <div class="mb-3">
                        <label for="desedit" class="form-label mb-0">Description</label>
                        <textarea name="listing[description]" id="desedit"
                            class="form-control" required><%= listing.description %> "></textarea>
                            <div class="invalid-feedback">Enter a short Description</div>
                            <div class="valid-feedback">Valid</div>
                    </div>
                    

                    <div class="mt-3">
                        <div>Original listing Image</div>
                        <img height="100px" width="150px" class=" original_image "  src="<%= originalimage %>" alt="">
                    </div>
                  
                    <div class="mb-3">
                        <label for="imageedit" class="form-label mb-0">Upload new Image</label>
                        <input name="listing[image]" type="file" id="imageedit" 
                            class="form-control"  >
                            <!-- <div class="invalid-feedback">Enter a valid Image url</div>
                            <div class="valid-feedback">Valid</div> -->
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="priceedit" class="form-label mb-0">Price</label>
                            <input name="listing[price]"  id="priceedit" value="<%= listing.price %>"
                                class="form-control" required >
                                <div class="invalid-feedback">Enter a valid price</div>
                            <div class="valid-feedback">Valid</div>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="locationedit" class="form-label mb-0">Location</label>
                            <input name="listing[location]" type="text" id="locationedit"
                                value="<%= listing.location %>" class="form-control" required >
                                <div class="invalid-feedback">Enter a valid location</div>
                                <div class="valid-feedback">Valid</div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="countryedit" class="form-label mb-0">Country</label>
                        <input name="listing[country]" type="text" id="countryedit" value="<%= listing.country %>"
                            class="form-control" required >
                            <div class="invalid-feedback">Enter a valid country</div>
                            <div class="valid-feedback">Valid</div>

                    </div>


                    <button class="btn btn-dark my-btn">Edit</button>
                    <br>
                    <br>
                </form>
            </div>
        </div>
    </body>